    private void converterButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                                 
        // TODO add your handling code here:
        
        double fahrenheit = Double.parseDouble(celciusTextField1.getText()) *1.8 + 32;
        fahrenheitLabel2.setText(fahrenheit + "Fahrenheit");
    }                                                

